<%= form_for @album do |f| %>
	<% if @album.errors.any? %>
		<ul>
		<% @album.errors.full_messages.each do |error| %>
		<li><%= error %></li>
		<% end %>
		</ul>
	<% end %>

		<%= f.label :artist %>
		<%= f.text_field :artist %>

		<%= f.label :album %>
		<%= f.text_field :title %>

		<%= f.label :year %>
		<%= f.text_field :year %>

		<%= f.submit %>
<% end %>
